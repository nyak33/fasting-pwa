[Unit]
Description=fasting-pwa backend (FastAPI + APScheduler)
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/opt/fasting-pwa/backend
EnvironmentFile=/opt/fasting-pwa/backend/.env
ExecStart=/opt/fasting-pwa/.venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
